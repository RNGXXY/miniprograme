/**app.wxss**/
page {
  background: #f5f5f5;
}


.tab-bar {
    padding-top: 26rpx;
    box-sizing: border-box;
    width: 100%;
    height: 200rpx;
    background-color: #fff;
    text-align: justify;
    text-align-last: justify;
    font-size: 0;
    display: flex;
}

.tab-bar-item {
    width: 25%;
    text-align: center;
    text-align-last: center;
    font-size: 30rpx;
    color: #5a647a;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.tab-bar-item image {
  width: 96rpx; height: 96rpx;
}



.job-item navigator {
  padding: 29rpx 0 33rpx;
  width: 100%;
  height: 100%;
  display: flex;
}

.job-item image {
  width: 120rpx;
  height: 120rpx;
  flex-grow: 0;
  flex-shrink: 0;
}
.job-item .info {
  margin-left: 20rpx;
  display: flex;flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
  flex-shrink: 1;
}

.job-item .info .job-name {
    max-width: 290rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: left;
    font-size: 32rpx;
    color: #5a647a;
}

.job-item .info .company-name {
    font-size: 25rpx;
    color: #bdc9da;
    max-width: 290rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: left;
}

.job-item .info .city-day, .job-item .info .city-time {
    font-size: 25rpx;
    color: #bdc9da;
    max-width: 300px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: left;
}
.job-item .info .city-time .city-time-item {
    display: inline-block;
    width: 140rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    vertical-align: bottom;
}

.job-item .info .city-time .city-time-item image {
  width: 20rpx; height: 20rpx;
  margin-right: 10rpx;
}

.job-item .publish {
  display: flex;flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
}

.job-item .publish .time {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #d2dbef;
  text-align: right;
}

.job-item .publish .salary {
      margin-top: 43rpx;
    font-size: 28rpx;
    color: #f96969;
    font-weight: bold;
}

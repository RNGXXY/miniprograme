/* components/select/select.wxss */

.select {
  height: 50px;
  width: 100%;
  display: flex;
}

.select .left {
  height: 50px;
  flex-grow: 1;
  background: yellow;
  overflow: hidden;
}

.select .left .top {
  
  background: tomato;
}
.select .left .bottom {
  background: pink;
}
.select .left .top, .select .left .bottom {
  width: 100%;
  height: 50px;
  display: flex;
}



select-item {
  flex-grow: 1;
  height: 50px;
}

.select .nav {
  height: 100%;
  width: 75rpx;
  background: #fff;
}